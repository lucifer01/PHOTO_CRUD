<div class="comments">
          
            <div class="row">
              <div class="col-xs-12">
                <%= form_for(@cmt, :html => {class: "form-horizontal", role: "form"}) do |f| %>

                  <div class="form-group">
                    <div class="control-label col-sm-2">
                      <%= f.label :"comment:" %>
                    </div>

                    <div class="col-sm-8">
                      <%= f.text_area :description, rows: 3, class: "form-control", placeholder: "Please enter new comment", autofocus: true %>
                    </div>
                  </div>

                  <div class="form-group">
                    <div class="center col-sm-offset-1 col-sm-10">
                      <%= f.submit :"Update Comment",  class: "btn btn-primary btn-md" %>
                    </div>
                  </div>
              <% end %>
          </div>
        </div>

</div>

