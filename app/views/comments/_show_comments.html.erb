<div class="show-comments">
  <div id="myDIV<%= post.id %>" style="display: none" >

    <% post.comments.each do |comment| %>
        <br>
        <mark style="background-color: #D0D3D4; border-radius: 10px;"> <b><%= User.find(comment.user_id).email %>:</b> <%= comment.description %></mark><br>
      <% if user_signed_in? and comment.user_id == current_user.id %>
        
        <%= link_to "Edit    ", edit_comment_path(comment), remote: true  %>
       
        <%= link_to "    Delete", comment, remote: true , method: :delete, data: { confirm: 'Are you sure?' }%>
        <br>
      <% end %>
    <% end %>
  </div>
</div>
